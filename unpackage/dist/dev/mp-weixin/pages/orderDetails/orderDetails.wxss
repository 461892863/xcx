
.detail {
	padding: 10rpx 15rpx;
	border-top: 4rpx solid #c6c6c6;
	border-bottom: 4rpx solid #c6c6c6;
	max-height: 35vh;
	overflow-y: auto;
}
.detailList {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.lastList{
	display: block;
	position: relative;
}
.list {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
	color: #000;
	font-size: 0.8em;
}
.money {
	font-size: 0.8em;
	text-align: right;
	margin: 15rpx 0;
	padding-right: 50rpx;
	color: #fe4e37;
}
.toRight {
	background: url(data:image/png;base64,) 95% 50% no-repeat;
	background-size: auto 50%;
}
.writer{
	background: url(data:image/png;base64,) 95% 50% no-repeat;
	background-size: auto 70%;
}
.btn {
	width: 40vw;
	padding: 0;
	border-radius: 5rpx;
	background: #8c8c8c;
	color: #fff;
	margin-top: 50rpx;
}
.writeInput {
	display: block;
	width: 400rpx;
	color: #7f7f7f;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.writer .writeInput{
	width: 100%;padding: 10rpx 0;
}

