
.footImg{
	width: 100vw;
	height: 40vh;
}
.swiper{
	height: 100%;
}
.swiper image{
	width: 100%;
	height: 100%;
}
.assessList{
	width: 100vw;border-bottom: 1rpx solid #888888;
	padding:  15rpx 0;
}
.left{
	-webkit-box-flex: 4;
	-webkit-flex: 4;
	    -ms-flex: 4;
	        flex: 4;
	margin-left:15rpx;
}
.left image{
	width: 100%;
	height: 100%;
}
.right{
	-webkit-box-flex: 6;
	-webkit-flex: 6;
	    -ms-flex: 6;
	        flex: 6;
	overflow: hidden;
	margin-left: 20rpx;
	margin-right: 15rpx;
}
.assessList input{
	padding: 3rpx 0;
	margin-top: 15rpx;
}
.right text{
	color: #ccc;
}
.btns{
	text-align: center;
}
.btns button{
	width: 40vw;
	background: rgb(149,149,149);
	display: inline-block;
	margin: 15rpx 15rpx 0;
}
.sjhf{
	width:90vw;
	padding: 15rpx;
	background: rgba(238, 227, 227, 1);
	clear: both;
	margin: 0 auto;
	border-radius: 5rpx;
	position: relative;
	font-size: 0.8em;
}
.sjhf text{
	color: #007AFF;
}
.sjhf:after{
	content:"";
	position:absolute;
	top: -15rpx;
	left:15rpx; 
	border: 20rpx solid transparent;
	border-bottom-color: rgba(238, 227, 227, 1);
	border-top:0; 
	margin:0 0 0rpx 0px;
}

