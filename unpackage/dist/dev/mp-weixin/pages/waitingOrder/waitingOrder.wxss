
.time {
	width: 30vw;
	height: 30vw;
	border-radius: 50%;
	text-align: center;
	overflow: hidden;
	border: 2rpx solid rgb(211, 211, 211);
	margin: 15rpx auto;
}
.title {
	width: 90vw;
	border: 5rpx solid rgb(211, 211, 211);
	margin: 15rpx auto;
	font-size: 0.7em;
	overflow: hidden;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.left {
	-webkit-box-flex: 2.5;
	-webkit-flex: 2.5;
	    -ms-flex: 2.5;
	        flex: 2.5;
	text-align: center;
	background: rgb(60, 60, 60);
	color: #fff;
	padding: 0 3rpx;
	padding: 10rpx 0;
}
.right {
	-webkit-box-flex: 7;
	-webkit-flex: 7;
	    -ms-flex: 7;
	        flex: 7;
	text-align: center;
	padding: 10rpx 0;
}
.btn {
	text-align: center;
}
.btn button {
	width: 40vw;
	background: rgb(149, 149, 149);
	display: inline-block;
	color: #fff;
	margin: 15rpx 15rpx 0;
}
.detail {
	padding: 10rpx 15rpx;
	border-top: 6rpx solid #c6c6c6;
	border-bottom: 6rpx solid #c6c6c6;
	max-height: 35vh;
	overflow-y: auto;
}
.detailList {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.list {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
	text-align: center;
	color: #000;
	font-size: 0.8em;
}
.money {
	font-size: 0.8em;
	text-align: right;
	margin: 15rpx 0;
	padding-right: 50rpx;
	color: #fe4e37;
}
.toRight {
	background: url(data:image/png;base64,) 95% 50% no-repeat;
	background-size: auto 50%;
}
.writeInput {
	display: block;
	width: 400rpx;
	color: #2b2b2b;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}

