<view class="foodBox" bind:__l="__l"><view class="footImg"><swiper class="swiper" indicator-dots="true" indicator-color="#ccc" indicator-active-color="#fff"><swiper-item><image src="{{imgUrl+footData.imgUrl}}" mode="aspectFill"></image></swiper-item></swiper></view><view class="footDetail"><view class="name"><text>{{footData.name}}</text></view><view class="sellCount" style="font-size:1em;"><text>{{"月售"+footData.sellNum+"单"}}</text></view><view class="score"><block wx:if="{{flag}}"><uni-rate style="display:inline-block;" value="{{$root.m0}}" size="15" disabled="true"></uni-rate></block><text>{{footData.level}}</text></view><view class="price"><text style="font-weight:bold;font-size:1.3em;">{{"￥"+footData.price}}</text><block wx:if="{{footData.sign}}"><text class="mark">{{footData.sign}}</text></block><cartcontrol style="display:inline-block;float:right;margin:5rpx 20rpx 0 0;" food="{{food}}" data-event-opts="{{[['^add',[['addCart']]],['^dec',[['decreaseCart']]]]}}" bind:add="__e" bind:dec="__e"></cartcontrol></view><view class="introduction">{{''+footData.body+''}}</view></view><view class="assess"><text data-event-opts="{{[['tap',[['moreAssess',['$0'],['footData.id']]]]]}}" class="moreAssess" bindtap="__e">查看更多评价 ></text><block wx:for="{{footData.comments}}" wx:for-item="assess" wx:for-index="index" wx:key="index"><view class="uni-comment-list"><view class="uni-comment-face"><image src="https://img-cdn-qiniu.dcloud.net.cn/uniapp/images/uni@2x.png" mode="widthFix"></image></view><view class="uni-comment-body"><view class="uni-comment-top"><text>匿名用户</text><uni-rate value="{{assess.commentLevel}}" size="10" disabled="true"></uni-rate><block wx:if="{{assess.isLike==1}}"><block><text>👍 赞了该商品</text></block></block><block wx:else><block wx:if="{{assess.isLike==0}}"><block><text>👍 赞了该商品</text></block></block><block wx:else><block><text></text></block></block></block></view><view class="uni-comment-date"><text style="color:rgb(165,165,165);">{{assess.commentDate}}</text></view><view style="clear:both;margin:80rpx 0 20rpx;"><view class="uni-comment-content">{{assess.body}}</view><view class="sjhf"><text>商家回复：</text>哈哈哈哈哈哈哈</view></view></view></view></block></view></view>