<view class="foodBox" bind:__l="__l"><view class="footImg"><swiper class="swiper" indicator-dots="true" indicator-color="#ccc" indicator-active-color="#fff"><swiper-item><image src="{{imgUrl+footData.imgUrl}}" mode="aspectFill"></image></swiper-item></swiper></view><view class="footDetail"><view class="name"><text>{{footData.name}}</text></view><view class="sellCount" style="font-size:1em;"><text>{{"月售"+footData.sellNum+"单"}}</text></view><view class="score"><block wx:if="{{flag}}"><uni-rate style="display:inline-block;" value="{{$root.m0}}" size="15" disabled="true"></uni-rate></block><text>{{footData.level}}</text></view><view data-event-opts="{{[['tap',[['toPraise']]]]}}" style="position:absolute;right:1rem;border-radius:.2rem;padding:.3rem;background:#0A98D5;color:#fff;" bindtap="__e">评价菜品</view><view class="price"><text style="font-weight:bold;font-size:1.3em;">{{"￥"+footData.price}}</text><block wx:if="{{footData.sign}}"><text class="mark">{{footData.sign}}</text></block></view><view class="introduction">{{''+footData.body+''}}</view></view><view class="assess"><text data-event-opts="{{[['tap',[['moreAssess',['$0'],['footData.id']]]]]}}" class="moreAssess" bindtap="__e">查看更多评价 ></text><block wx:for="{{footData.comments}}" wx:for-item="assess" wx:for-index="index" wx:key="index"><view class="uni-comment-list"><view class="uni-comment-face"><image src="{{assess.headerPortrait?assess.headerPortrait:'https://img-cdn-qiniu.dcloud.net.cn/uniapp/images/uni@2x.png'}}" mode="widthFix"></image></view><view class="uni-comment-body" style="position:relative;"><view class="uni-comment-top"><text>{{assess.userName?assess.userName:'匿名用户'}}</text><uni-rate style="margin-bottom:.5rem;" value="{{assess.commentLevel}}" size="10" disabled="true"></uni-rate><block wx:if="{{assess.isLike==1}}"><block><view style="display:flex;align-items:center;color:#999;"><image style="width:1rem;height:1rem;margin-right:10rpx;" src="../../static/goodActive.png" mode></image>赞了该商品</view></block></block><block wx:else><block wx:if="{{assess.isLike==0}}"><block><view style="display:flex;align-items:center;color:#999;"><image style="width:1rem;height:1rem;margin-right:10rpx;" src="../../static/nogoodActive.png" mode></image>踩了该商品</view></block></block><block wx:else><block><text></text></block></block></block></view><view class="uni-comment-date"><text style="color:#666;">{{assess.commentDate}}</text></view><view style="clear:both;margin:80rpx 0 20rpx;"><view class="uni-comment-content">{{assess.body}}</view><block wx:if="{{assess.replay}}"><view class="sjhf"><text>商家回复：</text>{{assess.replay+''}}</view></block></view></view></view></block></view></view>